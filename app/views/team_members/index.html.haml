%h4 Add or remove team members to have lunch with!

%table
  %thead
    %tr
      %th First name
      %th Last name
      %th
      %th
      %th

  %tbody
    - @team_members.each do |team_member|
      %tr
        %td= team_member.first_name
        %td= team_member.last_name
        %td= link_to 'Show', team_member
        %td= link_to 'Edit', edit_team_member_path(team_member)
        %td= link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Team member', new_team_member_path
